<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

  <ImageView
      android:id="@+id/Convopic"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

  <TextView
      android:id="@+id/ConvoName"
      android:layout_width="199dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:layout_marginEnd="132dp"
      android:layout_marginRight="132dp"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="@integer/material_motion_duration_medium_2"
      android:padding="1dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.954"
      app:layout_constraintStart_toEndOf="@+id/Convopic"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      tools:text="@tools:sample/lorem" />

  <TextView
      android:id="@+id/Gid"
      android:layout_width="259dp"
      android:layout_height="24dp"
      android:layout_marginStart="12dp"
      android:layout_marginLeft="12dp"
      android:layout_weight="1"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="@integer/material_motion_duration_medium_2"
      android:padding="1dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:text="Group ID"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.024"
      app:layout_constraintStart_toEndOf="@+id/Convopic"
      app:layout_constraintTop_toBottomOf="@+id/ConvoName"
      app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>